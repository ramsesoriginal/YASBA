# infra/frontend/Dockerfile.dev
FROM node:20-alpine

# Enable pnpm via corepack (ships with Node)
RUN corepack enable

WORKDIR /app

# Default Vite dev port
EXPOSE 5173

# Keep it explicit: compose will override command if needed.
CMD ["sh", "-lc", "pnpm --version && pnpm install && pnpm dev --host 0.0.0.0 --port 5173"]
