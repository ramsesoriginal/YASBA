// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "preferred_line_length": 100,
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "-C",
            "frontend",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}",
          ],
        },
      },
    },

    "TypeScript": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "-C",
            "frontend",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}",
          ],
        },
      },
    },

    "TSX": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "-C",
            "frontend",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}",
          ],
        },
      },
    },

    "JSON": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "-C",
            "frontend",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}",
          ],
        },
      },
    },

    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "-C",
            "frontend",
            "prettier",
            "--stdin-filepath",
            "{buffer_path}",
          ],
        },
      },
    },

    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "uv",
          "arguments": [
            "run",
            "ruff",
            "format",
            "--stdin-filename",
            "{buffer_path}",
            "-",
          ],
        },
      },
    },
  },
}
